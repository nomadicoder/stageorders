<div id="stage_table">
  <%= Time.now().strftime ("Updated: %m/%d/%Y %H:%M:%S") %>

  <table border=0>
    <tr>
      <th width=50>Stage</th>
      <th width=120>Runner</th>
      <th width=80>Runner<br/>status</th>
    </tr>

  <% @stage_statuses.each do |stage_status| %>
    <tr align='center'>
      <td><%=h stage_status.stage_number %></td>
      <td><%=h stage_status.runner_name %></td>
      <td class=status-<%= stage_status.runner_status %>><%=h stage_status.runner_status %></td>
      <%=h stage_status.stage_status %></td>
      <td><%= link_to 'Details', stage_status %></td>
      <td><%= link_to 'Update', edit_stage_status_path(stage_status) %></td>
    </tr>
  <% end %>
  </table>
</div>
