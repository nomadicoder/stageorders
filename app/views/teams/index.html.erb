<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Short name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.number %></td>
        <td><%= team.name %></td>
        <td><%= team.short_name %></td>
        <td><%= team.start_time %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>

<p>
  Download:
  <%= link_to "CSV", teams_path(format: "csv") %> |
  <%= link_to "Excel", teams_path(format: "xls") %>
</p>
<br>

<h2>Import Teams</h2>

<%= form_tag import_teams_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<%= link_to 'New Team', new_team_path %>
