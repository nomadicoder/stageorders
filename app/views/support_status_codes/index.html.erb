<h1>Listing support_status_codes</h1>

<table>
  <tr>
    <th>Sequence</th>
    <th>Short code</th>
    <th>Description</th>
  </tr>

<% @support_status_codes.each do |support_status_code| %>
  <tr>
    <td><%=h support_status_code.sequence %></td>
    <td><%=h support_status_code.short_code %></td>
    <td><%=h support_status_code.description %></td>
    <td><%= link_to 'Show', support_status_code %></td>
    <td><%= link_to 'Edit', edit_support_status_code_path(support_status_code) %></td>
    <td><%= link_to 'Destroy', support_status_code, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New support_status_code', new_support_status_code_path %>