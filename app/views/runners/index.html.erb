<h1>Listing runners</h1>

<table border>
  <tr>
    <th>Stage</th>
    <th>Name</th>
    <th>Estimated pace</th>
    <th>Completed</th>
    <th>Actual time</th>
  </tr>

<% @runners.each do |runner| %>
  <tr>
    <td><%=h runner.stage_id %></td>
    <td><%=h runner.name %></td>
    <td><%=h runner.estimated_pace.strftime("%M:%S") %></td>
    <td><%=h runner.completed %></td>
    <td><%=h runner.actual_time %></td>
    <td><%= link_to 'Show', runner %></td>
    <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
    <td><%= link_to 'Destroy', runner, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New runner', new_runner_path %>