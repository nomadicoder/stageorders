<%= form_for(@runner) do |f| %>
  <% if @runner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@runner.errors.count, "error") %> prohibited this runner from being saved:</h2>

      <ul>
      <% @runner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :team_id %><br>
    <%= f.collection_select( :team_id, Team.all, :id, :short_name ) %>
  </div>
  <div class="field">
    <%= f.label :stage_id %><br>
    <%= f.collection_select( :stage_id, Stage.all.order(:number), :id, :number ) %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :estimated_pace %><br>
    <%= f.time_select :estimated_pace, include_seconds: true %>
  </div>
  <div class="field">
    <%= f.label :completed %><br>
    <%= f.check_box :completed %>
  </div>
  <div class="field">
    <%= f.label :actual_time %><br>
    <%= f.time_select :actual_time, include_seconds: true %>
  </div>
  <div class="field">
    <%= f.label :runner_status_code_id %><br />
    <%= f.collection_select( :runner_status_code_id, RunnerStatusCode.all.order(:sequence), :id, :short_code ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
