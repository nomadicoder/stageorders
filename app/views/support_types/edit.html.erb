<h1>Editing support_type</h1>

<% form_for(@support_type) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :short_code %><br />
    <%= f.text_field :short_code %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @support_type %> |
<%= link_to 'Back', support_types_path %>