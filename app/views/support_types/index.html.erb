<h1>Listing support_types</h1>

<table>
  <thead>
    <tr>
      <th>Short code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @support_types.each do |support_type| %>
      <tr>
        <td><%= support_type.short_code %></td>
        <td><%= support_type.description %></td>
        <td><%= link_to 'Show', support_type %></td>
        <td><%= link_to 'Edit', edit_support_type_path(support_type) %></td>
        <td><%= link_to 'Destroy', support_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Support type', new_support_type_path %>
