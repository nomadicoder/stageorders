<div id="stage_table">
  <%= Time.now().strftime "Updated: %m/%d/%Y at %H:%M:%S" %>

  <table border=0>
    <tr>
      <th width=50>Stage</th>
      <% if user_signed_in? %>
        <th width=120>Runner</th>
      <% end %>
      <th width=120>Support</th>
      <th width=80>Runner<br/>status</th>
      <th width=80>Support<br/>status</th>
      <th width=50>Ready</th>
    </tr>

  <% @stage_statuses.each do |stage_status| %>
    <tr align='center'>
      <td><%=h stage_status.stage_number %></td>
      <% if user_signed_in? %>
        <td><%=h stage_status.runner_name %></td>
      <% end %>
      <td><%=h stage_status.tac_callsign %></td>
      <td><%=h stage_status.runner_status %></td>
      <td><%=h stage_status.support_status %></td>
      <% if stage_status.stage_status == "GO" || stage_status.stage_status == "CLEAR" %>
        <td BGCOLOR='GREEN'>
      <% else %>
        <td BGCOLOR='RED'>
      <% end %>
      <%=h stage_status.stage_status %></td>
    </tr>
  <% end %>
  </table>
</div>
