<% form_for(:support_unit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :team_id %> : 
    <%= f.collection_select( :team_id, Team.all, :id, :short_name, :prompt => "Team", :selected => @team_id) %>
  <br />
    <%= f.label :current_stage_id %> : 
    <%= f.collection_select( :current_stage_id, Stage.order(:number), :id, :number, :prompt => "Stage") %>
  <br />
    <%= f.label :tac_callsign %> : 
    <%= f.collection_select( :support_unit_id, SupportUnit.order(:tac_callsign), :id, :tac_callsign, :prompt => "Tac Callsign") %>
  <br />
    <%= f.label :status_code_id %> : 
    <%= f.collection_select( :support_status_code_id, SupportStatusCode.order(:sequence), :id, :short_code, :prompt => "Status") %>
  <br />
    <%= f.label :status_note %> : 
    <%= f.text_field :status_note %>
  <br />
    <%= f.submit 'Update Support Status' %>
  </p>
<% end %>
