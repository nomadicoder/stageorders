<div id="update_support_units">
<% form_for(:support_unit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :team_id %> : 
    <%= f.collection_select( :team_id, Team.find(:all), :id, :short_name, :prompt => "Team", :selected => @team_id) %>
  </p>
  <p>
    <%= f.label :current_stage_id %> : 
    <%= f.collection_select( :current_stage_id, Stage.find(:all, :order=>:number), :id, :number, :prompt => "Stage") %>
  </p>
  <p>
    <%= f.label :tac_callsign %> : 
    <%= f.collection_select( :support_unit_id, SupportUnit.find(:all, :order=>:tac_callsign), :id, :tac_callsign, :prompt => "Tac Callsign") %>
  </p>
  <p>
    <%= f.label :status_code_id %> : 
    <%= f.collection_select( :support_status_code_id, SupportStatusCode.find(:all, :order=>:sequence), :id, :short_code, :prompt => "Status") %>
  </p>
  <p>
    <%= f.label :status_note %> : 
    <%= f.text_field :status_note %>
  </p>
  <p>
    <%= f.submit 'Update Support Status' %>
  </p>
<% end %>
</div> <!-- update_support_units -->